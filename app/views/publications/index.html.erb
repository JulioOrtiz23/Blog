<p id="notice"><%= notice %></p>

 <% if user_signed_in? %>
  <div class="cuadro">
    <h1>Publicaciones</h1>

    <table>
      <thead>
        <tr>
          <th>Descripcion</th>
          <th>Fecha ingreso</th>
          <th>Usuario</th>
          <th>Publicacion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @publications.each do |publication| %>
          <tr> 
          
            <td><%= publication.descripcion %></td>
            <td><%= publication.fecha_ingreso %></td>
            <td><%= publication.user_id %></td>
            <td><%= link_to 'Mostrar', publication %></td>
            <td><%= link_to 'Editar', edit_publication_path(publication) %></td>
            <td><%= link_to 'Eliminar', publication, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nueva Publicaciòn', nueva_publicacion_path %>
</div>

<% else %>

<body class="background">
  <div class="inicio">
    <h1 style="padding-top:5%;"> Debes iniciar sesion o registrarte</h1>
  </div>
</body>

<% end %>